{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["react-native", "jest", "node"],
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "jsx": "react-native",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "types/*": ["./@types/*"]
    }
  },
  "include": ["src"]
}
